<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontStyle="italic"
        android:text="@string/voter_details"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/fullName_Search"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="35dp"
        android:background="#ECEFF1"
        android:gravity="center|left"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/address_Search"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="35dp"
        android:background="#ECEFF1"
        android:gravity="center|left"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/age_Search"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="35dp"
        android:background="#ECEFF1"
        android:gravity="center|left"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/email_Search"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="35dp"
        android:background="#ECEFF1"
        android:gravity="center|left"
        android:textSize="16sp" />

    <Button
        android:id="@+id/updateVoterDetailsBtn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="354dp"
        android:text="@string/update_voter_details"
        android:textColor="#FBFBFB"
        app:backgroundTint="#716E6E"
        app:layout_constraintEnd_toEndOf="@id/fullName_Search"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>